<UserControl x:Class="SubControlSupplierProject.View.NewSchemaUserControl.NewSchemaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubControlSupplierProject.View.NewSchemaUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="1800" 
             d:DesignWidth="640"
             KeyDown="UserControl_KeyDown"
             >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid 
            Grid.Row="0"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Column="0"
                Margin="5,0,5,0"
                Text="{Binding NameOfNewItem, UpdateSourceTrigger=PropertyChanged}"
                />
            <ComboBox
                Grid.Column="1"
                ItemsSource="{Binding TypeOfNewItem}"
                SelectedValue="{Binding SelectedTypeOfNewItem}"
                />
            <Button
                Grid.Column="2"
                Content="Add"
                Margin="5,0,5,0"
                Command="{Binding AddNewItemCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                />

        </Grid>

        <ScrollViewer 
            Grid.Row="1"
            x:Name="ItemsContentControlScrollViewer" Padding="20"
            >
            <Grid
                x:Name="GridForItems"
                >
            </Grid>
        </ScrollViewer>

        <Grid
            Grid.Row="2"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <TextBox
                Grid.Row="0"
                Margin="5,0,5,0"
                Text="{Binding NameOfNewSchema}"
                />
            <Button
                Content="save"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="5"
                Command="{Binding SaveNewSchemaCommand}"
                />

        </Grid>
       

    </Grid>
</UserControl>
