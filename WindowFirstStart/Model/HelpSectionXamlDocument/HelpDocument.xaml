<Window x:Class="WindowFirstStart.Model.HelpSectionXamlDocument.HelpDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowFirstStart.Model.HelpSectionXamlDocument"
        mc:Ignorable="d"
        Title="HelpDocument" 
        d:DesignHeight="1080" 
        d:DesignWidth="960"
        Background="White">
    <Border BorderBrush="Black" BorderThickness="0.3">
        <FlowDocumentScrollViewer>
            <FlowDocument x:Name="FirstStartWindowHelpEN" PagePadding="40">
                <Paragraph 
                    FontSize="30" 
                    TextAlignment="Center">
                    Assistance for the initial setup configuration window.
                </Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Border>
</Window>
