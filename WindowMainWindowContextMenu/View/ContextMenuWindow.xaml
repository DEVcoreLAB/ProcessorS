<Window x:Class="WindowMainWindowContextMenu.View.ContextMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowMainWindowContextMenu.View"
        mc:Ignorable="d"
        Title="ContextMenuWindow" 
        Height="auto" 
        Width="auto"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded" 
        SizeToContent="WidthAndHeight"
        >
    <Border
         Background="#DDAAAAAA"
         BorderBrush="Orange"
         BorderThickness="4,4,4,4"
         CornerRadius="10,10,10,10" Padding="10"
        >
        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <Grid
                Grid.Row="0"
                >
                    <Button
                    x:Name="LockButton"
                    Width="50"
                    Height="50"
                    BorderThickness="0"
                    Background="Transparent" 
                    Command="{Binding LockSreenCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    >
                        <Button.Effect>
                            <DropShadowEffect  
                            ShadowDepth="3" 
                            BlurRadius="3"/>
                        </Button.Effect>
                        <Image
                        Source="pack://application:,,,/Globals;component/Graphics/GraphicFiles/Lock.png"
                        Stretch="UniformToFill"
                        />
                    </Button>
                </Grid>

                <Grid
                Grid.Row="1"
                >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <Button
                    x:Name="HomeButton"
                    Grid.Column="0"
                    Width="50"
                    Height="50"
                    BorderThickness="0"
                    Background="Transparent"
                    >
                        <Button.Effect>
                            <DropShadowEffect  
                            ShadowDepth="3" 
                            BlurRadius="3"/>
                        </Button.Effect>
                        <Image
                        Source="pack://application:,,,/Globals;component/Graphics/GraphicFiles/HomeControl.png"
                        Stretch="UniformToFill"
                        />
                    </Button>

                    <Button
                    x:Name="ShowTaskBarButton"
                    Grid.Column="1"
                    Width="50"
                    Height="50"
                    BorderThickness="0"
                    Background="Transparent"
                    >
                        <Button.Effect>
                            <DropShadowEffect  
                            ShadowDepth="3" 
                            BlurRadius="3"/>
                        </Button.Effect>
                        <Image
                        Source="pack://application:,,,/Globals;component/Graphics/GraphicFiles/showTaskBar.png"
                        Stretch="UniformToFill"
                        />
                    </Button>

                    <Button
                    x:Name="MinimizeButton"
                    Grid.Column="2"
                    Width="50"
                    Height="50"
                    BorderThickness="0"
                    Background="Transparent"
                    >
                        <Button.Effect>
                            <DropShadowEffect  
                            ShadowDepth="3" 
                            BlurRadius="3"/>
                        </Button.Effect>
                        <Image
                        Source="pack://application:,,,/Globals;component/Graphics/GraphicFiles/minimizeToTaskBar.png"
                        Stretch="UniformToFill"
                        />
                    </Button>
                </Grid>
            </Grid>
    </Border>
</Window>
