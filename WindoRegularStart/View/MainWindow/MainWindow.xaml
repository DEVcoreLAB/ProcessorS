<Window x:Class="WindowRegularStart.View.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowRegularStart.View.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"
        ResizeMode="NoResize"
        WindowStyle="None" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        d:Width="1920"
        d:Height="1080"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        >
    <Border 
        x:Name="MainBORDER"  
        Background="White"
        BorderBrush="Orange"
        BorderThickness="0,4,4,4"
        CornerRadius="0,0,10,0"
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="1"
                >
                <!--Collapsible panel-->
                <Grid
                    Panel.ZIndex="1"
                    Width="auto" 
                    HorizontalAlignment="Left"
                    >
                    <DockPanel>
                        <Grid
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <!--Collapsible panel - button-->
                            <Grid
                                Grid.Column="0"
                                >
                                <Button
                                    x:Name="CollapsibleBUTTON"
                                    Command="{Binding CollapsibleButtonClickCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                    >
                                    <Image
                                        Source="pack://application:,,,/Globals;component/Graphics/GraphicFiles/CollapsibleButtonBackgroung.png"
                                        Stretch="UniformToFill"
                                        />
                                </Button>
                            </Grid>

                            <!--Collapsible panel - panel-->
                            <Grid
                                x:Name="CollapsiblePanelRight"
                                Grid.Column="1"
                                Background="#DDAAAAAA"
                                >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <!--WizardButton-->
                                <StackPanel
                                    Grid.Row="0"
                                    >
                                    <Button
                                        x:Name="WizardButton"
                                        Content="Wizard"
                                        Click="WizardButton_Click"
                                        />
                                </StackPanel>

                                <!--Exit Button-->
                                <StackPanel
                                    Grid.Row="2"
                                    Background="Transparent"
                                    >
                                    <Button
                                        Margin="10,0,10,10"
                                        Height="50"
                                        Width="50"
                                        Background="Transparent"
                                        Command="{Binding ExitButtonClickCommand}"
                                        >
                                        <Button.Effect>
                                            <DropShadowEffect  
                                                ShadowDepth="3" 
                                                BlurRadius="10"/>
                                        </Button.Effect>
                                        <Image
                                            Source="pack://application:,,,/Globals;component/Graphics/GraphicFiles/ProgramExit.png"
                                            Stretch="UniformToFill"
                                            />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Grid>

                <!--Main user control-->
                <UserControl
                    Margin="10,0,0,0"
                    Grid.Column="1"
                    Content="{Binding MainUserControl}"
                    />

            </Grid>
        </Grid>
    </Border>
</Window>
