<Window x:Class="Globals.MyDialogsAndWindows.MyLockScreen.LockScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Globals.MyDialogsAndWindows.MyLockScreen"
        mc:Ignorable="d"
        Title="LockScreenWindow" 
        ResizeMode="NoResize"
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        IsVisibleChanged="Window_IsVisibleChanged"
        KeyDown="Window_KeyDown"
        >
    <Border
     Background="#DDAAAAAA"
     BorderBrush="Orange"
     BorderThickness="4,4,4,4"
     CornerRadius="10,10,10,10" Padding="10"
    >
        <StackPanel>
            <PasswordBox
                x:Name="MyPasswordBox"
                Width="300"
                VerticalContentAlignment="Center"
                Padding="5,0,0,0" 
                PasswordChanged="PasswordBox_PasswordChanged"
                />
        </StackPanel>

    </Border>
</Window>
