<Window x:Class="Globals.Wizard.Windows.FillBoxes.FillComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Globals.Wizard.Windows.FillBoxes"
        mc:Ignorable="d"
        Title="FillComboBox" 
        Height="800" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        >
    <Border
        CornerRadius="5"
        BorderBrush="Orange"
        BorderThickness="2"
        Background="White"
        >
        <Grid
            Margin="5"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <DataGrid
                AutoGenerateColumns="False"
                Grid.Row="0"
                ItemsSource="{Binding LocalData}"
                CanUserAddRows="True"
                >
                <DataGrid.Resources>
                    <Style 
                        TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="Data"
                        Width="*"
                        Binding="{Binding value}"/> 
                </DataGrid.Columns>
            </DataGrid>
            <Button
                Grid.Row="1"
                Background="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Height="25"
                Click="Button_Click"
                >
                <Image 
                    Source="{Binding SaveButtonForeground, 
                    FallbackValue='pack://application:,,,/Globals;component/Graphics/GraphicFiles/SaveIconEnabled.png'}"/>
            </Button>
        </Grid>
    </Border>
</Window>
