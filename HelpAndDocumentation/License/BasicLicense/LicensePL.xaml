<UserControl x:Class="HelpAndDocumentation.License.BasicLicense.LicensePL"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelpAndDocumentation.License.BasicLicense"
             mc:Ignorable="d" 
             d:DesignHeight="1080" 
             d:DesignWidth="960"
             Background="White">
    <Border BorderBrush="Black" BorderThickness="0.3">
        <FlowDocumentScrollViewer >
            <FlowDocument x:Name="ProgramLicensePL" PagePadding="40">
                <Paragraph FontSize="30">
                    Licencja programu Local Data Collector 1.0.0
                </Paragraph>

                <Paragraph FontSize="20">
                    <Run Text="1. Użytkowanie:"/>
